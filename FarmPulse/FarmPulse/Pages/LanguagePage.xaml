<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:FarmPulse.Views"
             x:Class="FarmPulse.Pages.LanguagePage"
             BackgroundColor="{StaticResource AppColor}">
    <Grid RowDefinitions="Auto,*,*,Auto"
          ColumnDefinitions="*,330,*">
        <view:DemoInfoView Grid.Column="1"/>
        <Image Source="appLogo"
               Aspect="AspectFit"
               WidthRequest="120"
               HeightRequest="120"
               VerticalOptions="CenterAndExpand"
               Grid.Row="1"
               Grid.Column="1"/>
        <Picker Title="Select Language"
                HorizontalTextAlignment="Center"
                VerticalOptions="CenterAndExpand"
                Grid.Row="2"
                Grid.Column="1"/>
        <Button Text="Save"
                BackgroundColor="#D4BDA3"
                Margin="0,0,0,10"
                BorderWidth="2"
                Grid.Row="3"
                Grid.Column="1"
                Command="{Binding ClickSaveCommand}"/>
    </Grid>
</ContentPage>